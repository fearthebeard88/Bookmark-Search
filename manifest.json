{
	"manifest_version": 3,
	"name": "Bookmark Search Tool",
	"version": "0.0.1",
	"action": {
		"default_icon": {
			"16": "images/icon16.png",
			"19": "images/icon19.png",
			"48": "images/icon48.png",
			"128": "images/icon128.png"
		},
		"default_title": "Search your bookmarks",
		"default_popup": "html/popup.html"
	},
	"permissions": [
		"bookmarks",
		"storage",
		"tabs"
	],
	"options_ui": {
		"page": "html/options.html",
		"open_in_tab": false
	}
}